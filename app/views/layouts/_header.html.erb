<header class="horizontal-center justify-between">
  <div>
    <%= btn_to t("title"), root_url, type: :link, color: :base %>
  </div>
  <div class="horizontal">
    <% if user.present? %>
      <%= btn_to t("sign_out"), sign_out_path, method: :delete %>
    <% else %>
      <%= btn_to t("sessions.new.title"), sign_in_path, type: :link %>
    <% end %>
  </div>
</header>
