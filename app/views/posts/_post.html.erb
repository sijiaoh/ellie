<div id="<%= dom_id post %>" class="my-default">
  <div class="title my-default"><%= post.title %></div>

  <div class="horizontal my-default">
    <div class="font-medium"><%= t(post.published ? ".publishing" : ".unpublished") %></div>
  </div>

  <div class="my-default">
    <div class="<%= wysiwyg_class %>">
      <%== post.content %>
    </div>
  </div>
</div>
