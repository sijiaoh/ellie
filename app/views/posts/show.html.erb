<div>
  <div class="scaffold-buttons my-default">
    <%= link_to 'Edit this post', edit_post_path(@post), class: "button-primary" %>
    <%= button_to 'Destroy this post', post_path(@post), method: :delete, class: "button-danger" %>
    <%= link_to 'Back to posts', posts_path, class: "button-secondary" %>
  </div>

  <%= render @post %>
</div>
