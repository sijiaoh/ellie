<%= simple_form_for post do |form| %>
  <%= form.input :title, wrapper_html: { class: "my-default" } %>

  <%= form.label :content %>
  <%= render "shared/wysiwyg", class_name: "min-h-[30rem]" do %>
    <%= form.text_area :content %>
  <% end %>

  <%= form.input :published, wrapper_html: { class: "my-default" } %>

  <%= form.button :submit, class: "my-default" %>
<% end %>
