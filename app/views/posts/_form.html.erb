<%= custom_form_for post do |f| %>
  <%= f.base_errors %>

  <%= f.input :title %>
  <%= f.input(
        :content,
        as: :content_editor,
        editor_type: post.editor_type,
        input_html: { toggle: "editor", class: "h-[30rem]" }
      ) %>
  <%= f.input :published %>

  <%= f.button :submit %>
<% end %>
