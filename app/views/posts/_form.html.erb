<%= simple_form_for post do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :title %>

  <%= f.label :content %>

  <% case Rails.configuration.post_editor %>
  <% when "wysiwyg" %>
    <%= render "shared/wysiwyg", class_name: "min-h-[30rem]" do %>
      <%= f.text_area :content %>
    <% end %>
  <% when "code_editor" %>
    <%= render "shared/code_editor", class_name: "min-h-[30rem]" do %>
      <%= f.text_area :content %>
    <% end %>
  <% else %>
    <%= f.text_area :content %>
  <% end %>

  <%= f.input :published %>

  <%= f.button :submit %>
<% end %>
